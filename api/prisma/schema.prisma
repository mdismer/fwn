generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Goal {
  name String
  note String?
  difficulty Int
  progress String
}

model User {
  id                String     @id @default(auto()) @map("_id") @db.ObjectId
  email             String     @unique
  encryptedPassword String
  campaigns         Campaign[]
  confirmationToken String?
}

model Campaign {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  ownerId  String    @db.ObjectId
  owner    User      @relation(fields: [ownerId], references: [id])
  factions Faction[]
  words    World[]
}

model Faction {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  campaing    Campaign    @relation(fields: [campaignId], references: [id])
  campaignId  String      @db.ObjectId
  maxHp       Int
  currentHp   Int
  force       Int
  wealth      Int
  cunning     Int
  experience  Int
  homeWorld   World       @relation(fields: [homeWorldId], references: [id])
  homeWorldId String      @db.ObjectId
  goal        Goal?
}

model World {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  factions   Faction[]
  campaignId String    @db.ObjectId
  campaign   Campaign  @relation(fields: [campaignId], references: [id])
}
